### Dynamic Environments
[tag_Environment_staging]
# alwasy include localhost so we can run playbooks against this inventory and apply the appropriate group_vars
provisioner ansible_host=localhost ansible_connection=local
# NOTE: Option to manually add an AWS EC2 instance to this env
# staging.exmaple.com ansible_user=ubuntu

[staging:children]
tag_Environment_staging

[staging:vars]
infrastructure_env=staging
